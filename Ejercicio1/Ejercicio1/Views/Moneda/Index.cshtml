@{
    Layout = null;
    var mensaje = TempData["msg"];
    var para = TempData["para"];
    var total = TempData["cantidad"];
}

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <link href="~/Content/moneda.css" rel="stylesheet" />
    <title>CONVERSION</title>
</head>
<body style="background-color:#cac3c3">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">CONVERSION DE MONEDA</h3>
                        
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formCambio" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <label>PAIS DE ORIGEN DE LA MODENA:</label>
                                <div class="form-group">
                                    <select id="De" name="De" class="form-control" required>
                                        <option value=null>PAIS ORIGEN</option>
                                        @foreach (var pais in ViewBag.Pais)
                                        {
                                            <option data-Codigo="@pais.Codigo" value="@pais.Codigo">@pais.Nombre</option>
                                        }
                                    </select>
                                </div>
                                <label>CANTIDAD DE MONEDA</label>
                                <div class="form-group">
                                    <input class="form-control" id="Cantidad" name="Cantidad" placeholder="Cantidad Dinero" type="number" required>
                                </div>
                                <label>PAIS A CONVERTIR LA MONEDA</label>
                                <div class="form-group">
                                    <select class="form-control" name="Para" id="Para" required>
                                        <option value=null>PAIS CONVERSION</option>
                                        @foreach (var pais in ViewBag.Pais)
                                        {
                                            <option data-Codigo="@pais.Codigo" value="@pais.Codigo">@pais.Nombre</option>
                                        }

                                    </select>
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="CONVERTIR">

                                </div>

                            </fieldset>
                        }
                        <label>@mensaje</label><br />
                        <label>@para</label><br />
                        <label>@total</label>
                        <div class="form-group">

                            <h1 class="panel-title">EDWIN ALEXAMDER NOLASCO</h1>
                            <h1 class="panel-title">CARNET: 25-0991-20212   </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
